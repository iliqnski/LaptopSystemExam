@model IEnumerable<LaptopSystem.Web.Models.LaptopViewModel>
@{
    ViewBag.Title = "Home Page";  
}
<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var laptop = Model.ElementAt(i);
        <div class="span4">
            <h2>@laptop.Manufacturer @laptop.Model</h2>
            <img src="@laptop.ImageUrl" />
            <p><a class="btn" href="@Url.Action("Details", "Laptops", new { laptop.Id })">Price @laptop.Price</a></p>
        </div>
        
        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
            @:<div class="row-fluid">
        }
    }
</div>
